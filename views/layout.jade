doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Ryan Munger | #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://fonts.googleapis.com/css?family=Roboto:400,500,700|Roboto+Slab" rel="stylesheet")
    script(src="https://use.fontawesome.com/38ab6e7743.js")
  body
    img.mobile-headshot.desktop-hidden(src="/images/mobile-headshot.jpg")
    .wrapper
      header
        .tint-overlay
          .wrap
            a(href="/")
              .logo
            p
              | I am a Front-End Developer who specializes in HTML, CSS and JavaScript.
              | I have over 8 years of experience designing and building web applications.
          a.right#nav-toggle(href="#")
            i.fa.fa-bars(aria-hidden="true")
        .wrap
          ul.mobile-hidden#nav
            i.fa.fa-times.close.desktop-hidden(aria-hidden="true")
            .nav-wrapper
              li
                a(href="/" class=title === 'Resume' ? 'active' : undefined) Resume
              li
                a(href="/portfolio" class=title === 'Portfolio' ? 'active' : undefined) Portfolio
              li.desktop-hidden
                a(href="mailto:ryanmunger@gmail.com") Contact Me
      .hero-photo.mobile-hidden
      block content
      hr.desktop-hidden
      footer
        .wrap
          a.hire-me(href="mailto:ryanmunger@gmail.com") Contact Me
            i.fa.fa-envelope-open-o(aria-hidden="true")
          ul.social-links
            li
              a(href="http://codepen.io/ryanmunger/")
                i.fa.fa-codepen(aria-hidden="true")
            li
              a(href="http://github.com/ryanmunger")
                i.fa.fa-github(aria-hidden="true")
            li
              a(href="http://stackoverflow.com/users/3611025/roothewhirl?tab=profile")
                i.fa.fa-stack-overflow(aria-hidden="true")
            li
              a(href="http://www.linkedin.com/pub/ryan-munger/32/681/408")
                i.fa.fa-linkedin(aria-hidden="true")
            li
              a(href="https://soundcloud.com/ryanmunger")
                i.fa.fa-soundcloud(aria-hidden="true")
  script(src="/javascripts/scripts.js")
